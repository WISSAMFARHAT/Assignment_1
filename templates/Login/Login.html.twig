<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>Login</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="/public/css/login.css">
        <link rel="stylesheet" href="https://drive.google.com/uc?id=1jLrfISsLUcRiwgNl0koSfsS6lylj0E7h">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        {% endblock %}
    </head>
<body class="bg">
<section  class="container-fluid ">
    <section class="row">
    <section class="col-lg-4 col-sm-4   col-md-4"></section>
        <section class="col-lg-7 col-sm-7  col-md-7 ">
            <form class="form-container" method='post'>
                <div class="form-group">
                   <label for="exampleInputEmail1" >User ID </label>
                   <input type="text" class="form-control" name='User_id' placeholder="Enter your Id">
                </div>
                <div class="form-group pt-4">
                   <label for="exampleInputPassword1">Password</label>
                   <input type="password" name='pwd' class="form-control" id="exampleInputPassword1" placeholder="Password">
                </div>
                <div class="form-check pt-3">
                    <input type="checkbox" class="form-check-input" id="remember_me" name="remember_me">
                    <label class="form-check-label" for="exampleCheck1">Keep Logged in</label>
                </div>
                <button type="submit" class="btn btn-primary w-100 mt-4">Submit</button>
                {# read and display just one flash message type #}
                {% for message in app.flashes('notice') %}
                    <div class="flash-notice  mt-3 alert alert-danger">
                        {{ message }}
                    </div>
                {% endfor %}
            <div class='row'>
                <div class="col-6 mt-2">
                <a href='#' class="text-primary btn">Forgot User ID?</a>
                </div>
                <div class="col-6 mt-2">
                <a href='#' class="text-primary btn">Forgot Password?</a>
                </div>
            </div>
            </form>
        </section>
        <section class="col-lg-2 col-sm-2 col-md-2"></section>
    </section>
</section>
</body>
</html>