<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}list{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://drive.google.com/uc?id=1jLrfISsLUcRiwgNl0koSfsS6lylj0E7h">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
    <div class="row">
        <div class="col-2  mt-5 " style="margin-left: 5%;">
            <a href="{{path('list_classes')}}" class="justify-content-center btn btn-info">Get classes</a>
        </div>
        <div class="col-8">
        <form action="{{path('classeId')}}">
        <div class="col-12 mt-5  form-group row">
            <div class="col-2">
                <label class="col-form-label">GET Id Class</label>
             </div>
             <div class="col-8">   
                <input type="text" class="w-25 form-control" name='ID'  placeholder="ID classe"></input>
            </div>
        </div>
        </div>
        </form>
        <div class="col-2 mt-5" style="margin-left: 5%;">
            <a href="{{path('List_courses')}}" class="justify-content-center btn btn-info ">Get courses</a>
        </div>
        <div class="col-8">
        <form action="{{path('courseId')}}">
            <div class="col-12 mt-5  form-group row">
            <div class="col-2">
                <label class="col-form-label">GET Id Course</label>
             </div>
             <div class="col-8">   
                <input type="text" class="w-25 form-control" name='ID'  placeholder="ID course"></input>
            </div>
        </div>
        </div>
        </form>
        <form action="{{path('new_classes')}}" method="post">
        <div class="col-12 mt-5  form-group row">
            <div class="col-2" style="margin-left:5%;">
                <label class="col-form-label ">POST Classe</label>
             </div>
             <div class="col-8">   
                    <input type="text" class="w-25 form-control" name='name' placeholder='name_classe' required></input><br />
                    <input  type="text"  class="w-25 form-control" name='section' placeholder='section' required></input> </br />
                    <input type="submit" class="w-25 btn btn-primary" value="send">
            </div>
        </div>
        </div>
        </form>
        
        </div>
    </div>
        {% block javascripts %}
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js" integrity="sha384-q2kxQ16AaE6UbzuKqyBE9/u/KzioAlnx2maXQHiDX9d4/zp8Ok3f+M7DPm+Ib6IU" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.min.js" integrity="sha384-pQQkAEnwaBkjpqZ8RU1fF1AKtTcHJwFl3pblpTlHXybJjHpMYo79HY3hIi4NKxyj" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
